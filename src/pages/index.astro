---
import { Search } from "lucide-react";

import Layout from "~/layouts/layout.astro";
---

<Layout>
  <main class="flex flex-1 flex-col items-center justify-center">
    <h1 class="font-heading mb-12 text-7xl font-semibold tracking-[-3%]">
      Queryly
    </h1>
    <form
      class="bg-transparen flex h-10 w-full max-w-[40rem] rounded-xl border border-input shadow-sm"
      method="get"
      action="/search"
    >
      <input
        class="w-full rounded-l-xl px-3 py-1 text-base md:text-sm"
        type="search"
        name="q"
        placeholder="Search"
        required
      />
      <button
        class="inline-flex aspect-square h-full items-center justify-center rounded-r-xl transition-colors hover:bg-primary hover:text-primary-foreground"
        type="submit"
      >
        <Search size={20} />
      </button>
    </form>
  </main>
</Layout>
