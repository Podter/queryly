---
import { Search } from "lucide-react";

import Layout from "~/layouts/layout.astro";
---

<Layout>
  <main class="flex flex-1 flex-col items-center justify-center">
    <h1 class="font-heading mb-12 text-7xl font-semibold tracking-[-3%]">
      Queryly
    </h1>
    <form
      class="flex h-10 w-full max-w-[40rem] rounded-xl border border-input bg-background shadow-sm"
      method="get"
      action="/search"
    >
      <input
        class="w-full rounded-l-xl bg-background px-3 py-1 text-base placeholder:text-muted-foreground md:text-sm"
        type="search"
        name="q"
        placeholder="Search"
        required
      />
      <button
        class="inline-flex aspect-square h-full items-center justify-center rounded-r-xl transition-colors hover:bg-primary hover:text-primary-foreground"
        type="submit"
      >
        <Search size={20} />
      </button>
    </form>
  </main>
</Layout>

<style>
  body {
    @apply bg-grid-small-[#E5E5E5] dark:bg-grid-small-[#262626];
  }
</style>
