---
import { Search } from "lucide-react";

import ThemeToggle from "~/components/theme-toggle.astro";
import Layout from "~/layouts/layout.astro";
import { cn } from "~/lib/utils";
---

<Layout>
  <main class="flex flex-1 flex-col items-center justify-center">
    <ThemeToggle className="absolute right-3 top-3" />
    <h1 class="font-heading mb-12 text-7xl font-semibold tracking-[-3%]">
      Queryly
    </h1>
    <div class="w-full max-w-[42rem] px-6">
      <form
        class="flex h-10 overflow-hidden rounded-xl border border-input bg-background shadow-sm"
        method="get"
        action="/search"
      >
        <input
          class="w-full bg-background px-3 py-1 text-base placeholder:text-muted-foreground focus-visible:outline-none md:text-sm"
          type="search"
          name="q"
          placeholder="Search"
          required
        />
        <button
          class={cn(
            "inline-flex aspect-square h-full items-center justify-center transition-colors focus-visible:outline-none",
            "hover:bg-accent hover:text-accent-foreground focus-visible:bg-accent focus-visible:text-accent-foreground"
          )}
          type="submit"
        >
          <Search size={20} />
        </button>
      </form>
    </div>
  </main>
</Layout>

<style>
  body {
    @apply bg-dot-[#E5E5E5] dark:bg-dot-[#262626];
  }
</style>
